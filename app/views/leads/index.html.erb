<div class="w-full">
  <% flash.each do |type, message| %>
    <p class="py-2 px-3 mb-5 font-medium rounded-lg inline-block <%= type == 'notice' ? 'bg-green-50 text-green-500' : 'bg-red-50 text-red-500' %>" id="<%= type %>"><%= message %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Leads</h1>
    <%= link_to t('leads.new.title'), new_lead_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="leads" class="min-w-full">
    <%= render @leads %>
  </div>
</div>
